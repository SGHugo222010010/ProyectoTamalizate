<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear cuenta"
            android:textSize="30dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/montserrat_extrabold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp"
             />
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completa los campos"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato_bold"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp"
            />

        <EditText
            android:id="@+id/edittext_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/edittext_custom"
            android:fontFamily="@font/lato_bold"
            android:hint="Nombre"
            android:inputType="text"
            android:padding="15dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/subtitle"
            tools:layout_editor_absoluteX="20dp" />

        <EditText
            android:id="@+id/edittext_lastname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/edittext_custom"
            android:fontFamily="@font/lato_bold"
            android:hint="Apellido"
            android:inputType="text"
            android:padding="15dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/edittext_name"
           />
        <EditText
            android:id="@+id/edittext_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/edittext_custom"
            android:fontFamily="@font/lato_bold"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/edittext_lastname"
            />
        <EditText
            android:id="@+id/edittext_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/edittext_custom"
            android:fontFamily="@font/lato_bold"
            android:hint="Phone"
            android:inputType="phone"
            android:padding="15dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/edittext_email"
            />
        <EditText
            android:id="@+id/edittext_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/edittext_custom"
            android:fontFamily="@font/lato_bold"
            android:hint="Contrseña"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/edittext_phone"
            />
        <EditText
            android:id="@+id/edittext_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/edittext_custom"
            android:fontFamily="@font/lato_bold"
            android:hint="Confirmar contraseña"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/edittext_password"
            />
        <Button
            android:id="@+id/btn_register"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="REGISTRARSE"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/montserrat_extrabold"
            android:backgroundTint="@color/orange"
            app:layout_constraintTop_toBottomOf="@id/edittext_confirm_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/imageview_go_to_login"
            android:layout_width="30dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_arrow_left"
            app:layout_constraintTop_toBottomOf="@id/btn_register"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/textViewGoToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver al login"
            android:fontFamily="@font/lato_bold"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@id/imageview_go_to_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="15dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>